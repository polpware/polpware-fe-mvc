{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "fe-mvc-host": {
            "root": "",
            "sourceRoot": "host",
            "projectType": "application",
            "prefix": "",
            "schematics": {            
                "@schematics/angular:component": {
                    "styleext": "css"
                }
            },
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "outputPath": "dist/fe-mvc-host",
                        "index": "host/index.html",
                        "main": "host/main.ts",
                        "tsConfig": "host/tsconfig.app.json",
                        "polyfills": "host/polyfills.ts",
                        "assets": [
                            "host/assets",
                            "host/favicon.ico"
                        ],
                        "styles": [
                            "host/styles.css"
                        ],
                        "scripts": []
                    },
                    "configurations": {
                        "production": {
                            "optimization": true,
                            "outputHashing": "all",
                            "sourceMap": false,
                            "extractCss": true,
                            "namedChunks": false,
                            "aot": true,
                            "extractLicenses": true,
                            "vendorChunk": false,
                            "buildOptimizer": true,
                            "fileReplacements": [
                                {
                                    "replace": "host/environments/environment.ts",
                                    "with": "host/environments/environment.prod.ts"
                                }
                            ],
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "2mb",
                                    "maximumError": "5mb"
                                }
                            ]
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "browserTarget": "fe-mvc-host:build"
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "fe-mvc-host:build:production"
                        }
                    }
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "polpware-fe-mvc:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "host/test.ts",
                        "karmaConfig": "host/karma.conf.js",
                        "polyfills": "host/polyfills.ts",
                        "tsConfig": "host/tsconfig.spec.json",
                        "scripts": [],
                        "styles": [
                            "host/styles.css"
                        ],
                        "assets": [
                            "host/assets",
                            "host/favicon.ico"
                        ]
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "host/tsconfig.app.json",
                            "host/tsconfig.spec.json"
                        ],
                        "exclude": [
                            "**/node_modules/**/*"                  
                        ]
                    }
                }
            }
        },
        "fe-mvc-host-e2e": {
            "root": "e2e/",
            "sourceRoot": "",
            "projectType": "application",
            "architect": {
                "e2e": {
                    "builder": "@angular-devkit/build-angular:protractor",
                    "options": {
                        "protractorConfig": "e2e/protractor.conf.js",
                        "devServerTarget": "fe-mvc-host:serve"
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "e2e/tsconfig.e2e.json"
                        ],
                        "exclude": [
                            "**/node_modules/**"
                        ]
                    }
                }
            }
        }
    },
    "defaultProject": "fe-mvc-host"
}
