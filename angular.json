{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "principleware-fe-mvc": {
      "root": "",
      "sourceRoot": "host",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist",
            "index": "host/index.html",
            "main": "host/main.ts",
            "tsConfig": "host/tsconfig.app.json",
            "polyfills": "host/polyfills.ts",
            "assets": [
              "host/assets",
              "host/favicon.ico"
            ],
            "styles": [
              "host/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "host/environments/environment.ts",
                  "with": "host/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "principleware-fe-mvc:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "principleware-fe-mvc:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "principleware-fe-mvc:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "host/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "host/polyfills.ts",
            "tsConfig": "host/tsconfig.spec.json",
            "scripts": [],
            "styles": [
              "host/styles.css"
            ],
            "assets": [
              "host/assets",
              "host/favicon.ico"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "host/tsconfig.app.json",
              "host/tsconfig.spec.json"
            ],
            "exclude": []
          }
        }
      }
    },
    "principleware-fe-mvc-e2e": {
      "root": "",
      "sourceRoot": "",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./protractor.conf.js",
            "devServerTarget": "principleware-fe-mvc:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "e2e/tsconfig.e2e.json"
            ],
            "exclude": []
          }
        }
      }
    }
  },
  "defaultProject": "principleware-fe-mvc",
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "styleext": "css"
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    }
  }
}
